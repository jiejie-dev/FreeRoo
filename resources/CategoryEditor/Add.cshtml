@model FreeRoo.Category

@{
    ViewBag.Title = "添加栏目";
    Layout = "~/Views/Admin/Admin.cshtml";
}

    <div class="container">
        <form role="form" class="form-horizontal" action="/CategoryEditor/DoAdd.do" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Name">栏目名称</label>
                <div class="col-sm-9">
                    <input type="text" name="CategoryName" class="form-control" id="Name" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="Title">栏目标题</label>
                <div class="col-sm-9">
                    <input type="text" name="CTitle" class="form-control" id="Title" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="CParentName">父栏目名称</label>
                <div class="col-sm-9">
                    <select class="form-control" name="CParentName" id="CParentName">
                        <option value="root">默认分类</option>
                        @foreach (var Item in FreeRoo.TemplateDataHelper.GetCategories())
                        {
                            <option value="@Item.CategoryName">@Item.CTitle</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9">
                    <input type="submit" name="submit" class="btn btn-default" value="添加" />
                </div>
            </div>
        </form>
    </div>
