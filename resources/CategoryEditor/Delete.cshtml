@{
    ViewBag.Title = "删除栏目";
    Layout = "~/Views/Admin/Admin.cshtml";
}

    <div class="container">
        <form role="form" action="/CategoryEditor/DoDelete.do" method="post">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="CategoryID">栏目名称</label>
                <select class="form-control" name="CategoryID" id="CategoryID">
                    @foreach (var Item in FreeRoo.TemplateDataHelper.GetCategories())
                    {
                        <option value="@Item.CategoryName">@Item.CTitle</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" name="submit" class="btn btn-default" value="添加" />
            </div>
        </form>
    </div>
