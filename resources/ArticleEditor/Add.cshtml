@model FreeRoo.Article

@{
    ViewBag.Title = "添加文章";
    Layout = "~/Views/Admin/Admin.cshtml";
}

    <div class="container">
        <form class="form-horizontal" role="form" action="/ArticleEditor/DoAdd.do" method="post">
            <input type="hidden" value="admin" name="AAuthor"/>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="AName">Html名称</label>
                <div class="col-sm-10">
                    <input type="text" name="AName" class="form-control" id="AName" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="ATitle">标题</label>
                <div class="col-sm-10">
                    <input type="text" name="ATitle" class="form-control" id="ATitle" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="AContent">内容</label>
                <div class="col-sm-10">
                    <div class="ueditor-div">
                        <!-- 加载编辑器的容器 -->
                        <script id="add_container" name="AContent" type="text/plain">
                        </script>
                        <!-- 实例化编辑器 -->
                        <script type="text/javascript">
                            var ue = UE.getEditor('add_container');
                            //设置编辑器的内容
                            ue.setContent('我是卢杰杰');
                        </script>
                    </div>
                </div>


            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="ACategoryName">所属栏目</label>
                <div class="col-sm-10">
                    <select class="form-control" name="ACategoryName" id="ACategoryName">
                        <option value="root">默认分类</option>
                        @{
                            foreach (var item in FreeRoo.TemplateDataHelper.GetCategories())
                            {
                                <option value="@item.CategoryName">@item.CTitle</option>
                            }
                        }
                    </select>
                </div>

            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" name="submit" class="btn btn-default" value="保存" />
                </div>
            </div>
        </form>
    </div>
