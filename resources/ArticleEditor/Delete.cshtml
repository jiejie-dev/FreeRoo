@{
    ViewBag.Title = "删除文章";
    Layout = "~/Views/Admin/Admin.cshtml";
}

@model FreeRoo.Article

    <div class="container">
        <form class="form-horizontal" role="form" action="/ArticleEditor/DoDelete.do" method="post">
            <input type="hidden" name="ArticleID" class="form-control" value="@Model.ArticleID}" id="ArticleID" />
            <div class="form-group">
                <label class="col-sm-2 control-label">更新时间</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ATime</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">浏览次数</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.AR</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">作者</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.AAuthor}</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="AName">Html名称</label>
                <div class="col-sm-10">
                    <input type="text" name="AName" class="form-control" id="AName" value="@Model.AName" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="ATitle">标题</label>
                <div class="col-sm-10">
                    <input type="text" name="ATitle" class="form-control" id="ATitle" value="@Model.ATitle" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="ATitle">内容</label>
                <div class="col-sm-10">
                    <div class="ueditor-div">
                        <!-- 加载编辑器的容器 -->
                        <script id="container" name="AContent" type="text/plain">@Model.AContent</script>
                        <!-- 实例化编辑器 -->
                        <script type="text/javascript">
                            var ue = UE.getEditor('container');
                        </script>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="ACategoryName">所属栏目</label>
                <div class="col-sm-10">
                    <select class="form-control" name="ACategoryName" id="ACategoryName">
                        <option value="@Model.ACategoryName">@FreeRoo.TemplateDataHelper.GetCategory(@Model.ACategoryName).CTitle</option>
                        @{
                            foreach (var item in FreeRoo.TemplateDataHelper.GetCategories())
                            {
                                <li><a href="/@item.CategoryName/">@item.CTitle</a></li>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-off-2 col-sm-10">
                    <input type="submit" name="submit" class="btn btn-default" value="保存" />
                </div>
            </div>
        </form>
    </div>
