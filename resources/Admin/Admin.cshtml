<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <title>@ViewBag.Title</title>
    <link href="/public/bootstrap/css/bootstrap.css" rel="stylesheet">
    <script src="/public/js/jquery/jquery.js"></script>
    <script src="/public/bootstrap/js/bootstrap.js"></script>

    <!-- 配置文件 -->
    <script type="text/javascript" src="/public/ueditor/ueditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script type="text/javascript" src="/public/ueditor/ueditor.all.js"></script>
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-default">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">FreeRoo</a>
            </div>
            <p class="navbar-text pull-right"><a href="/Admin/Logout.do">lujiejie</a></p>
        </nav>
        <div class="panel-body col-sm-2" style="padding-left:0px;padding-top:0px">
            <div class="panel-group" id="accordion">
                @{
                    var Plugin= FreeRoo.TemplateDataHelper.GetPlugins();
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordion"
                                   href="#@Plugin.Name">
                                    @Plugin.Title
                                    </a>
                                </h4>
                            </div>
                            <div id="@Plugin.Name" class="panel-collapse">
                                <div class="panel-body">
                                    <ul class="nav nav-pills nav-stacked">
                                        @foreach (var App in Plugin.Apps)
                                        {
                                            <li><a href="@App.Url">@App.Title</a></li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                }
                    
            </div>
        </div>
        <div class="col-sm-10" style="padding-right:0px">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title" id="MainTitle">
                        @ViewBag.Title
                    </h3>
                </div>
                <div class="panel-body" id="MainPanel">
                    @RenderBody()
                </div>
            </div>
        </div>
        
    </div>
</body>
</html>
